<h2> <%= @brand.name %> </h2>

<h3>Shoe models in stock by this brand</h3>

<% @shoes.each do |shoe| %>
  <% if (shoe.brand_id == @brand.id) %>
    <hr>
    <br>
    <p> <a href="/shoes/<%= shoe.id %>"><%= shoe.name %></a> </p>
    <br>
    <hr>
  <% end %>
<% end %>

<% if @brand.shoes() == [] %>
  <hr>
  <br>
  <br>
  <p>There are no shoes by this brand in your Inventory</p>
  <br>
  <br>
  <hr>
<% end  %>
