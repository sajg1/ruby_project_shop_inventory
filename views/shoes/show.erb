<h2> <%= @shoe.name %> </h2>
<h3> <%= @shoe.brand %> </h3>
<p> Type: <%= @shoe.type %> </p>
<p> Purchase Price: £ <%= @shoe.purchase_price %> </p>
<p> Selling Price: £ <%= @shoe.selling_price %> </p>
<p> Markup: £ <%= @shoe.markup %> </p>
<hr>


<form action="/shoes/<%= @shoe.id %>/edit " method="get">
  <input type="submit" value="Edit Product">
</form>

<form action="/shoes/<%= @shoe.id %>/delete" method="post">
  <input type="submit" name="" value="Delete All Stock">
</form>

<hr>
