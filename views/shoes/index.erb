<h1>Shoe Inventory</h1>
<p>Click on the individual shoe to delete, add or update sold products</p>

<hr>

<h3><a href="/shoes/new">Add a new product</a></h3>

<hr>

<% @shoes.each do |shoe| %>
<p><a href="/shoes/<%= shoe.id %>">Name: <%= shoe.name %></a></p>
<p>Brand: <%= shoe.brand %> </p>
<p>Type: <%= shoe.type %> </p>
<p>Stock Quantity: <%= shoe.stock_quantity %>  - <%= shoe.stock_level %></p>
<%= shoe.stock_level %>
<p>Stock Cost: £<%= shoe.stock_cost %>  </p>
<p>Selling Price: £<%= shoe.selling_price %>  </p>

<!-- not funtioncal yet -->
<form action="shoes/<%= shoe.id %>/edit" method="post">
  <input type="submit" value="Edit stock">
</form>

<form action="shoes/<%= shoe.id %>/delete" method="post">
  <input type="submit" value="Delete All Stock">
</form>
<hr>
<hr>
<% end %>
