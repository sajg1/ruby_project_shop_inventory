

<table>
  <tr>
    <th>Shoe Name</th>

    <th>Shoe Brand</th>

    <th>Current Stock</th>

    <th>Stock Level</th>

    <th>Buy Stock</th>

    <th>Sell Stock</th>
  </tr>
  <% @stock_items.each do |stock_item|  %>
  <tr>
    <td><a href="/shoes/<%= stock_item.shoe.id %>"><%= stock_item.shoe.name %></a></td>

    <td><a href="/brands"><%= stock_item.shoe.brand %></td>

    <td>
      <% if stock_item.stock_level == "Ok" %>
        <p id="green" ><%= stock_item.quantity %></p>
      <% elsif stock_item.stock_level == "Low Stock" %>
        <p id="orange"><%= stock_item.quantity %> </p>
      <% else %>
        <p id="red"> <%= stock_item.quantity %></p>
      <% end %>
    </td>

    <td> <%= stock_item.stock_level %></td>
    <td>
      <!-- give this a proper action in the form -->
      <form  action="/stock_items/<%= stock_item.id %>/buy" method="post">
        <input type="number" min="0" name="amount" value="0">
        <input type="submit" value="Buy">
      </form>
    </td>
    <td>
      <form  action="/stock_items/ <%= stock_item.id %>/sell " method="post">
        <input type="number" min= "0" name="amount" value="0">
        <input type="submit" value="Sell">
      </form>
    </td>
  <% end %>
  </tr>

</table>
